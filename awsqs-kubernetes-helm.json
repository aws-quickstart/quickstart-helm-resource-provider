{
    "typeName": "AWSQS::Kubernetes::Helm",
    "description": "A resource provider for managing Helm.",
    "sourceUrl": "https://github.com/aws-quickstart/quickstart-helm-resource-provider.git",
    "definitions": {
        "Arn": {
            "type": "string",
            "pattern": "^arn:aws(-(cn|us-gov))?:[a-z-]+:(([a-z]+-)+[0-9])?:([0-9]{12})?:[^.]+$"
        }
    },
    "properties": {
        "ClusterID": {
            "description": "EKS cluster name.",
            "type": "string"
        },
        "KubeConfig": {
                "description": "AWS Secrets Manager ARN for Kubernetes configuration file.",
                "$ref": "#/definitions/Arn"
        },
        "RoleArn": {
            "description": "IAM role for Amazon EKS cluster authentication. If no value is provided, the resource execution role is used.",
            "$ref": "#/definitions/Arn"
        },
        "Repository": {
            "description": "Repository URL. The default is kubernetes-charts.storage.googleapis.com.",
            "type": "string"
        },
        "RepositoryOptions": {
            "description": "Specify additional options for repository.",
            "type": "object",
            "properties": {
                "Username": {
                    "description": "Chart repository user name.",
                    "type": "string"
                },
                "Password": {
                    "description": "Chart repository password.",
                    "type": "string"
                },
                "CAFile": {
                    "description": "To verify HTTPS-enabled server certificates, use this certificate authority bundle from Amazon S3.",
                    "type": "string"
                },
                "InsecureSkipTLSVerify": {
                    "description": "Skip TLS certificate checks for the repository.",
                    "type": "boolean"
                }
            }
        },
        "Chart": {
            "description": "Name of the chart.",
            "type": "string"
        },
        "Namespace": {
            "description": "Namespace to use with Helm. If this does not exist, it is created for you using the default value.",
            "type": "string"
        },
        "Name": {
            "description": "Name of the Helm release.",
            "type": "string"
        },
        "Values": {
            "description": "(Optional) Provide custom values.",
            "type": "object",
            "patternProperties": {
                "^.+$": {"type": "string"}
            }
        },
        "ValueYaml": {
            "description": "String representation of the values.yaml file.",
            "type": "string"
        },
        "Version": {
            "description": "Specify version. If no value is provided, the latest version is used.",
            "type": "string"
        },
        "ValueOverrideURL": {
            "description": "(Optional) Provide a custom value for the YAML file.",
            "type": "string",
            "pattern": "^[sS]3://[0-9a-zA-Z]([-.\\w]*[0-9a-zA-Z])(:[0-9]*)*([?/#].*)?$"
        },
        "ID": {
            "description": "Primary identifier for AWS CloudFormation.",
            "type": "string"
        },
        "Resources": {
            "description": "Resources from Helm charts.",
            "type": "object"
        },
        "TimeOut": {
            "description": "Timeout for resource provider. The default is 60 minutes.",
            "type": "integer"
        },
        "VPCConfiguration": {
            "type": "object",
            "description": "VPC cluster for network connectivity.",
            "properties": {
                "SecurityGroupIds": {
                    "description": "Specify one or more security groups.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "SubnetIds": {
                    "description": "Specify one or more subnets.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "Chart"
    ],
    "readOnlyProperties": [
        "/properties/Resources",
        "/properties/ID"
    ], 
    "primaryIdentifier": [
        "/properties/ID"
    ],
    "createOnlyProperties": [
        "/properties/Name",
        "/properties/Namespace",
        "/properties/ClusterID"
    ],
    "handlers": {
        "create": {
            "permissions": [
                "secretsmanager:GetSecretValue",
                "kms:Decrypt",
                "eks:DescribeCluster",
                "s3:GetObject",
                "sts:AssumeRole",
                "iam:PassRole",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "iam:GetRole",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "ec2:CreateNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ec2:Describe*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "lambda:*"
            ]
        },
        "read": {
            "permissions": [
                "secretsmanager:GetSecretValue",
                "kms:Decrypt",
                "eks:DescribeCluster",
                "s3:GetObject",
                "sts:AssumeRole",
                "iam:PassRole",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "iam:GetRole",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "ec2:CreateNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ec2:Describe*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "lambda:*"
            ]
        },
        "update": {
            "permissions": [
                "secretsmanager:GetSecretValue",
                "kms:Decrypt",
                "eks:DescribeCluster",
                "s3:GetObject",
                "sts:AssumeRole",
                "iam:PassRole",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "iam:GetRole",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "ec2:CreateNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ec2:Describe*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "lambda:*"
            ]
        },
        "delete": {
            "permissions": [
                "secretsmanager:GetSecretValue",
                "kms:Decrypt",
                "eks:DescribeCluster",
                "s3:GetObject",
                "sts:AssumeRole",
                "iam:PassRole",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "iam:GetRole",
                "iam:GetPolicy",
                "iam:GetPolicyVersion",
                "ec2:CreateNetworkInterface",
                "ec2:DeleteNetworkInterface",
                "ec2:Describe*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "lambda:*"
            ]
        }
    }
}
